<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.AddSpendFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="ايصال صرف"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"/>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddSpendCompanyNameText"
            android:text="اسم الشركة"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddSpendCompanyAddressText"
            android:text="عنوان الشركة"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:layout_toStartOf="@id/txtAddSpendCompanyNameText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddSpendCompanyPhoneText"
            android:text="هاتف الشركة"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignEnd="@id/txtAddSpendCompanyAddressText"
            android:layout_below="@id/txtAddSpendCompanyAddressText"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddSpendDateText"
            android:text="25/10/212111111"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="20dp"/>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:text="ملاحظات"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/blue_sec_1"
            android:gravity="center"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.5"
            android:text="المبلغ المصروف"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/blue_sec_1"
            android:gravity="center"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtAddSpendNotice"
            android:layout_weight="0.5"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtAddSpendSpendMoney"
            android:layout_weight="1.5"
            android:inputType="number"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/btnAddSpendCancel"
            android:layout_weight="1"
            android:backgroundTint="@color/blue_sec_1"
            android:text="حذف"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/btnAddSpendSave"
            android:layout_weight="1"
            android:backgroundTint="@color/blue_sec_1"
            android:text="حفظ"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

    </LinearLayout>

</LinearLayout>