<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.WareHouseFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:id="@+id/txtWareHouseNoticeText"
                android:text="ملاحظات"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/blue_sec_1"
                android:gravity="center"
                android:layout_margin="1dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:id="@+id/txtWareHousePriceText"
                android:text="السعر"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/blue_sec_1"
                android:gravity="center"
                android:layout_margin="1dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:id="@+id/txtWareHouseMeterText"
                android:text="متر"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/blue_sec_1"
                android:gravity="center"
                android:layout_margin="1dp"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:id="@+id/txtWareHouseNumberText"
                android:text="توب"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/blue_sec_1"
                android:gravity="center"
                android:layout_margin="1dp"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:id="@+id/txtWareHouseTypeGoodText"
                android:text="نوع البضاعة ومواصفاتها"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/blue_sec_1"
                android:gravity="center"
                android:layout_margin="1dp"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:id="@+id/txtWareHouseTotalPriceText"
                android:text="القيمة الاجمالية"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/blue_sec_1"
                android:gravity="center"
                android:layout_margin="1dp"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerWareHouseDetailsWareHouse"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:spanCount="1"
            android:layout_below="@id/header"/>

    </RelativeLayout>

</HorizontalScrollView>