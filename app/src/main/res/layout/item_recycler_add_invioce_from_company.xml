<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/edtItemRecyclerAddInvoiceFromCompanyNoticeText"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#f1f1f1"
            android:gravity="center"
            android:layout_margin="1dp"
            android:inputType="text"/>

        <EditText
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:id="@+id/edtItemRecyclerAddInvoiceFromCompanyPriceText"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#f1f1f1"
            android:gravity="center"
            android:layout_margin="1dp"
            android:inputType="number"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/edtItemRecyclerAddInvoiceFromCompanyMeterText"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#f1f1f1"
            android:gravity="center"
            android:layout_margin="1dp"
            android:inputType="number"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/edtItemRecyclerAddInvoiceFromCompanyNumberText"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#f1f1f1"
            android:gravity="center"
            android:layout_margin="1dp"
            android:inputType="number"/>

        <AutoCompleteTextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/edtItemRecyclerAddInvoiceFromCompanyTypeGoodText"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#f1f1f1"
            android:gravity="center"
            android:layout_margin="1dp"
            android:inputType="text"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/txtItemRecyclerAddInvoiceFromCompanyTotalPriceText"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#f1f1f1"
            android:gravity="center"
            android:layout_margin="1dp"/>

    </LinearLayout>

</HorizontalScrollView>