<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/txtItemRecycleWareHouseNoticeText"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#f1f1f1"
            android:gravity="center"
            android:layout_margin="1dp"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:id="@+id/txtItemRecycleWareHousePriceText"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#f1f1f1"
            android:gravity="center"
            android:layout_margin="1dp"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:id="@+id/txtItemRecycleWareHouseMeterText"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#f1f1f1"
            android:gravity="center"
            android:layout_margin="1dp"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/txtItemRecycleWareHouseNumberText"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#f1f1f1"
            android:gravity="center"
            android:layout_margin="1dp"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/txtItemRecycleWareHouseTypeGoodText"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#f1f1f1"
            android:gravity="center"
            android:layout_margin="1dp"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/txtItemRecycleWareHouseTotalPriceText"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#f1f1f1"
            android:gravity="center"
            android:layout_margin="1dp"/>

    </LinearLayout>

</HorizontalScrollView>